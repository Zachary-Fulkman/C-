// See https://aka.ms/new-console-template for more information


using Microsoft.VisualBasic;

bool isRainy = false;
bool hasUmbrella = true;


if (isRainy && hasUmbrella) 

{
    Console.WriteLine("It's rainy, but I have an umbrella");
}

if (isRainy && !hasUmbrella)
{
    Console.WriteLine("It's raining and I dont have an umbrella");
}

if (!isRainy && hasUmbrella)
{
    Console.WriteLine("Why did I bring an umbrella?"); 
}

if (!isRainy || hasUmbrella)
{
    Console.WriteLine("I'm not getting wet");
}

Console.ReadKey();
